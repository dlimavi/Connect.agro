@using Connect.Agro.Models.Dtos.Requests;
@model CreatePlantationRequest;
@{
    ViewData["Title"] = "Cadastro de Plantações";
}

<div class="row justify-content-md-center">    
    <div class="col-6">
        <form class="register-form" asp-controller="Plantation" asp-action="Register" method="post">
            <div class="mb-3">
                <label class="form-label">Produto:</label>
                <select asp-for="ProductId" asp-items="ViewBag.Produces" class="form-control"></select>
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Data do plantio:</label>
                <input type="date" asp-for="Date" class="form-control" id="dateInput">
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantidade:</label>
                <input type="number" asp-for="Quantity" class="form-control" id="dateInput">
            </div>
            @* TODO: Calcular estimativa de colheita com base no produto *@
            <div class="mb-3">
                <label for="expectedHarvestDate" class="form-label">Data estimada para colheita:</label>
                <input type="date" asp-for="EstimatedHarvestDate" class="form-control" id="expectedHarvestDateInput">
            </div>
            <div class="mb-3">
                <label class="form-label">Setor:</label>
                <select asp-for="SectorId" asp-items="ViewBag.Sectors" class="form-control"></select>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-danger" asp-controller="Plantation" asp-action="Index">Cancelar</a>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        </form>
    </div>
</div>



