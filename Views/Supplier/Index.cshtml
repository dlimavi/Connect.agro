@using Connect.Agro.Models.Domain
@model List<Supplier>
@{
    ViewData["Title"] = "Fornecedores";
}
<div class="view-actions-div">
    <div class="left-side-view-action"></div>
    <div class="right-side-view-action">
        <a class="register-button" asp-controller="Supplier" asp-action="Register"> + Cadastrar Fornecedor </a>
    </div>
</div>

<div class="row"></div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome fantasia</th>
            <th scope="col">Email</th>
            <th scope="col">CPF/CNPJ</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
            @if(Model.Any())
        {
            foreach(var supplier in Model)
            {
                <tr>
                        <th scope="row">@supplier.Id</th>
                        <td>@supplier.BusinessName</td>
                        <td>@supplier.Email</td>
                        <td>@supplier.Document</td>
                        <td>
                            <div class="btn-group" role="group" >
                                <a role="button" class="btn btn-outline-primary" asp-route-id = "@supplier.Id" asp-controller="Supplier" asp-action="Edit">Editar</a>
                            <a role="button" class="btn btn-outline-danger" asp-route-id="@supplier.Id" asp-controller="Supplier" asp-action="Delete">Excluir</a>
                            </div>
                        </td>
                    </tr>
            }
        }
        
    </tbody>
</table>



