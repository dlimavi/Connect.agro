@using Connect.Agro.Models.Domain
@model List<Customer>
@{
    ViewData["Title"] = "Clientes";
}
<div class="view-actions-div">
    <div class="left-side-view-action"></div>
    <div class="right-side-view-action">
        <a class="register-button" asp-controller="Customer" asp-action="Register"> + Cadastrar Cliente </a>
    </div>
</div>

<div class="row"></div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome fantasia</th>
            <th scope="col">Email</th>
            <th scope="col">CPF/CNPJ</th>
            <th scope="col">Endereço</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Any())
    {
        foreach(var customer in Model)
        {
            <tr>
                    <th scope="row">@customer.Id</th>
                    <td>@customer.BusinessName</td>
                    <td>@customer.Email</td>
                    <td>@customer.Document</td>
                    <td>@customer.Address</td>
                    <td>
                        <div class="btn-group" role="group" >
                            <a role="button" class="btn btn-outline-primary" asp-route-id = "@customer.Id" asp-controller="Customer" asp-action="Edit">Editar</a>
                            <a role="button" class="btn btn-outline-danger" asp-route-id="@customer.Id" asp-controller="Customer" asp-action="Delete">Excluir</a>
                        </div>
                    </td>
                </tr>
        }
    }
    </tbody>
</table>



